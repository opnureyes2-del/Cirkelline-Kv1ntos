{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cirkelline Local Agent",
  "version": "0.1.0",
  "identifier": "com.cirkelline.local-agent",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Cirkelline Local Agent",
        "width": 400,
        "height": 600,
        "minWidth": 320,
        "minHeight": 480,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "visible": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://ckc.cirkelline.com https://api.cirkelline.com; img-src 'self' data:; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ],
    "resources": [
      "models/*",
      "resources/*"
    ],
    "category": "Productivity",
    "shortDescription": "Cirkelline Local Agent - AI på din computer",
    "longDescription": "Cirkelline Local Agent kører AI-opgaver lokalt på din computer for hurtigere responstid, offline kapabilitet og bedre privatliv.",
    "copyright": "2024 Cirkelline",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {}
}
